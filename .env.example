# LinkedIn Credentials
# Your LinkedIn account credentials
LINKEDIN_USERNAME=your.email@domain.com
LINKEDIN_PASSWORD=your_password

# Database Configuration
# PostgreSQL connection string
DATABASE_URL=postgresql://username:password@localhost:5432/linkedin_scraper

# Optional: For Heroku or cloud deployments
# DATABASE_URL=postgres://username:password@hostname:5432/database_name

# Browser Configuration
# Set to 'true' for headless mode (production), 'false' for development
HEADLESS_BROWSER=false

# Chrome binary path (optional, auto-detected if not specified)
# CHROME_BINARY_PATH=/usr/bin/google-chrome

# Scraping Configuration
# Rate limiting settings (requests per minute)
REQUESTS_PER_MINUTE=30

# Delay between requests (seconds)
DELAY_BETWEEN_REQUESTS=2

# Maximum retries for failed requests
MAX_RETRIES=3

# Optional: Proxy Configuration
# Enable proxy rotation for large-scale scraping
USE_PROXY=false
PROXY_LIST=proxy1:port,proxy2:port,proxy3:port
PROXY_USERNAME=proxy_username
PROXY_PASSWORD=proxy_password

# Optional: External API Keys for Contact Enrichment
# Hunter.io for email verification and discovery
HUNTER_IO_API_KEY=your_hunter_api_key

# Clearbit for company and contact enrichment
CLEARBIT_API_KEY=your_clearbit_api_key

# Snov.io for email discovery
SNOV_IO_API_KEY=your_snov_api_key

# ZoomInfo API (enterprise)
ZOOMINFO_API_KEY=your_zoominfo_api_key

# Optional: Production Features
# Redis for caching and queue management
REDIS_URL=redis://localhost:6379/0

# Celery broker URL (for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/0

# Optional: Monitoring and Logging
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable detailed logging
ENABLE_DEBUG_LOGGING=false

# Sentry for error tracking (production)
SENTRY_DSN=your_sentry_dsn

# Optional: API Server Configuration
# Port for REST API server
API_PORT=8000

# API host binding
API_HOST=0.0.0.0

# API secret key for authentication
API_SECRET_KEY=your_secret_key_here

# Optional: Sales Navigator Configuration
# Enhanced extraction settings for Sales Navigator
SALES_NAVIGATOR_ENABLED=true

# Sales Navigator search preferences
SN_DEFAULT_SEARCH_LOCATION=United States
SN_DEFAULT_SEARCH_INDUSTRY=Technology

# Optional: Data Export Configuration
# Default export format (csv, excel, json)
DEFAULT_EXPORT_FORMAT=csv

# Export file path
EXPORT_PATH=./exports/

# Optional: Development Settings
# Development mode (enables additional logging and debugging)
DEVELOPMENT_MODE=true

# Test mode (uses test database)
TEST_MODE=false

# Optional: Performance Settings
# Maximum concurrent browser instances
MAX_CONCURRENT_BROWSERS=3

# Browser timeout settings (seconds)
PAGE_LOAD_TIMEOUT=30
ELEMENT_WAIT_TIMEOUT=10

# Optional: Data Quality Settings
# Minimum confidence score for extracted data
MIN_CONFIDENCE_SCORE=0.8

# Enable data validation
ENABLE_DATA_VALIDATION=true

# Optional: Compliance Settings
# Enable GDPR compliance features
GDPR_COMPLIANCE=true

# Data retention period (days)
DATA_RETENTION_DAYS=365

# Enable audit logging
ENABLE_AUDIT_LOG=true